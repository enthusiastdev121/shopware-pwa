{
  "name": "shopware-pwa",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "vsf-core-packages/*"
    ],
    "nohoist": [
      "**/**/**"
    ]
  },
  "scripts": {
    "dev": "node scripts/dev.js",
    "dev:client": "yarn dev shopware-6-client -format=esm-bundler",
    "dev:composables": "yarn dev composables -format=esm-bundler",
    "dev:helpers": "yarn dev helpers -format=esm-bundler",
    "dev:debug": "node --inspect scripts/dev.js",
    "build": "node scripts/build.js --types",
    "postinstall": "node scripts/linkDependencies.js && lerna link",
    "lint": "prettier --write --parser typescript 'packages/**/*.ts'",
    "test": "jest",
    "test:e2e": "jest --e2e=true --runInBand",
    "test:coverage": "yarn test --coverage",
    "docs:dev": "vuepress dev docs",
    "docs:build": "npx typedoc --options ./typedoc.js && vuepress build docs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "prettier --parser=typescript --write",
      "git add"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "@microsoft/api-extractor": "^7.7.3",
    "@rollup/plugin-json": "^4.0.1",
    "@rollup/plugin-replace": "^2.3.0",
    "@types/faker": "^4.1.9",
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.7",
    "axios": "^0.19.1",
    "brotli": "^1.3.2",
    "chalk": "^3.0.0",
    "conventional-changelog-cli": "^2.0.31",
    "coveralls": "^3.0.9",
    "execa": "^4.0.0",
    "faker": "^4.1.0",
    "fs-extra": "^8.1.0",
    "husky": "^4.0.9",
    "jest": "^24.9.0",
    "lerna": "^3.20.2",
    "lint-staged": "^9.5.0",
    "minimist": "^1.2.0",
    "prettier": "~1.19.1",
    "rollup": "^1.29.0",
    "rollup-plugin-alias": "^2.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-terser": "^5.2.0",
    "rollup-plugin-typescript2": "^0.25.3",
    "ts-jest": "^24.3.0",
    "typedoc": "^0.16.4",
    "typedoc-plugin-markdown": "^2.2.16",
    "typescript": "^3.7.4",
    "vuepress": "^1.2.0",
    "yorkie": "^2.0.0"
  },
  "engines": {
    "node": "10.x"
  }
}
